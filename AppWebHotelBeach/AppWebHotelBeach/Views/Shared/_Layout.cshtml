<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beach.SA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --bs-primary: #0c193b;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .custom-navbar {
            background-color: var(--bs-primary);
        }

        .navbar-brand img {
            height: 100px;
            width: auto;
        }

        .nav-link-custom, .btn-logout {
            color: #fff3d1 !important;
            padding: 0.5rem 1rem !important;
            transition: color 0.3s ease, transform 0.3s ease;
            background: none;
            border: none;
            text-decoration: none;
        }

        .btn-logout {
            color: #0c193b !important;
        }

        .nav-link-custom:hover {
            color: #fff3d1 !important;
            transform: translateY(-2px);
        }

        .custom-footer {
            background-color: #0c193b;
            color: #fff3d1;
            text-align: center;
            padding: 1rem 0;
        }

        .navbar-toggler {
            width: 3rem;
            height: 3rem;
            border: none;
        }

        .navbar-toggler-icon {
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255,255,255,0.9%29' stroke-linecap='round' stroke-width='3' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            background-size: contain;
            background-repeat: no-repeat;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/Imagenes/Beach_Logo_minimizado.jpg" alt="Beach.SA">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Customers" asp-action="Customers">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Packages" asp-action="Packages">Paquetes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Reservations" asp-action="Reservations">Reservaciones</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link-custom" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form method="post" asp-controller="Users" asp-action="Logout">
                                            <button type="submit" class="dropdown-item btn-logout">Cerrar sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-controller="Cuentas" asp-action="Crear">Crear cuenta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-controller="Cuentas" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="mi-footer ">
        <div class="container text-center">
            &copy; 2025 - Beach.SA
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
