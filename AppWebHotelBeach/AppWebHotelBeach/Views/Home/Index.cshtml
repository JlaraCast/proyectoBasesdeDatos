@{
    ViewData["Title"] = "Home Page";

}

<div class="image-strip">
    <div class="texto-overlay">
        <h1>Bienvenido</h1>
        <p>Nos alegra tenerte con nosotros. ¡Esperamos que disfrutes tu estadía!</p>
    </div>
</div>


<div class="libro-flotante">

    <!-- Sección 1 -->
    <div class="seccion-habitacion">
        <img src="~/Imagenes/Habitacion.png" alt="Tu habitación" class="imagen-flotante" />
        <div class="descripcion-habitacion">
            <h2>Tu habitación</h2>
            <p>Explora todos los servicios disponibles en tu habitación y solicita atención personalizada.</p>
        </div>
    </div>

    <!-- Sección 2 (imagen a la derecha) -->
    <div class="seccion-habitacion imagen-derecha">
        <img src="~/Imagenes/Comedor.png" alt="Servicios de comedor" class="imagen-flotante" />
        <div class="descripcion-habitacion">
            <h2>Restaurante</h2>
            <p>Consulta el menú diario o haz tu pedido directamente desde tu habitación.</p>
        </div>
    </div>

    <!-- Sección 3 -->
    <div class="seccion-habitacion">
        <img src="~/Imagenes/Exteriores.png" alt="Piscina y exteriores" class="imagen-flotante" />
        <div class="descripcion-habitacion">
            <h2>Zona recreativa</h2>
            <p>Reserva espacios en la piscina, zonas verdes o actividades recreativas disponibles hoy.</p>
        </div>
    </div>

</div>

