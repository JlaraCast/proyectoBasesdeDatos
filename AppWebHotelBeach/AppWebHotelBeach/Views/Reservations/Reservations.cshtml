

@{
    ViewData["Title"] = "Reservaciones";
}

<style>
    .bg-custom {
        background-color: #0c193b !important;
    }

    .btn-custom-outline {
        border-color: #0c193b;
        color: #0c193b;
        transition: all 0.3s ease;
    }

        .btn-custom-outline:hover {
            background-color: #0c193b;
            color: white;
        }

    .rounded-xl {
        border-radius: 1rem;
    }

    .card-shadow {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="container mt-5">
    <div class="card rounded-xl card-shadow border-0">
        <div class="card-header bg-custom text-white rounded-top-xl">
            <h3 class="mb-0 text-center">Gestión de Reservaciones</h3>
        </div>
        <div class="card-body p-5">
            <p class="mb-4 text-center fs-5">Selecciona una acción para administrar los registros de Reservaciones.</p>
            <div class="d-grid gap-3">
                <a asp-controller="Reservations" asp-action="List" class="btn btn-custom-outline btn-lg rounded-pill">
                    Ver Lista de Reservaciones
                </a>
                <a asp-controller="Reservations" asp-action="SearchByCustomer" class="btn btn-custom-outline btn-lg rounded-pill">
                    Buscar reservaciones por cedula de cliente
                </a>
                
            </div>
        </div>
    </div>
</div>